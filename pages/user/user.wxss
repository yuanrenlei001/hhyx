.top {width:100%;height:230rpx;background: #dac9a6;}
.top view {float:left;}
.top01 {margin-left: 28rpx;width:90rpx;height:90rpx;border: 2px solid #fff;border-radius: 50%;
  position: relative;top:50%;margin-top: -45rpx;
}
.top01 image {width:90rpx;height:90rpx;border-radius: 50%;}
.top02 {margin-left: 26rpx;font-size: 30rpx;color: #fff;line-height: 230rpx;}
.top03 {margin-left: 20rpx;line-height: 230rpx;}
.top03 image {width:40rpx;height:40rpx;vertical-align: middle;}
.topSort {width:100%;height:128rpx;position: relative;background: #fff;}
.topSort01 {width:33%;display: block;float:left;height:100%;border-right: 1px solid #e5e5e5;text-align: center;}
.topSort01:last-child {border-right: none;}
.topSort text {display: block;}
.topNum {margin-top: 25rpx;}
.order {width:92%;background: #fff;margin: 23rpx 0;padding: 0 28rpx;}
.orderTop {height:82rpx;line-height: 82rpx;border-bottom: 1px solid #eee;}
.orderTop text:first-child {font-size: 30rpx;float:left;}
.orderTop text:last-child {font-size: 24rpx;float:right;}
.orderSort {width:100%;position: relative;}
.orderSort navigator {width:20%;display: block;float:left;font-size: 28rpx;height:153rpx;text-align: center;}
.orderSort image {width:60rpx;height:45rpx;padding-top: 38rpx;}
.orderSort text {display: block;}
.bottomSort {background: #fff;width:100%;}
.bottomSort navigator {display: block;width:100%;height:100rpx;line-height: 100rpx;font-size: 28rpx;
  border-bottom: 1px solid #eee;
}
.bottomSort image {width:34rpx;height:34rpx;vertical-align: middle;margin-left: 28rpx;margin-right: 18rpx;}