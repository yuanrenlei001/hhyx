/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  min-height: 300rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.top, .top image {width:100%;height:750rpx;}
.sort {width:100%;height:156rpx;background: #fff;position: relative;overflow: hidden;}
.sort01 {margin-left: 28rpx;font-size: 28rpx;line-height: 80rpx;width:70%;
white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
}
.sort02 {font-size: 29rpx;margin-left: 28rpx;color: #dac9a6;float:left;}
.sort02 text {font-size: 50rpx;}
.sort03 {float:right;font-size: 20rpx;margin-right: 28rpx;margin-top: 20rpx;}
.share {position: absolute;top:26rpx;right:28rpx;}
.share image {width:33rpx;height:48rpx;}
.specification {padding-left: 28rpx;width:96%;font-size: 28rpx;height:93rpx;line-height: 93rpx;margin: 16rpx;background: #fff;
overflow: hidden;
}
.specification02 {float:right;margin-right: 28rpx;}
.commodityTop {height:200rpx;position: relative;}
.commodityImg {width:200rpx;height:200rpx;position: absolute;top:-40rpx;left:28rpx;border: 1px solid #fff;}
.commodityText {margin-left: 250rpx;padding-top: 40rpx;font-size: 28rpx;}
.close {width:45rpx;height:45rpx;position: absolute;top:28rpx;right:28rpx;
  text-align: center;line-height: 45rpx;border-radius: 50%;color: #dac9a6;border: 1px solid #dac9a6;
}
.chima {width:92%;position: relative;margin: auto;border-bottom: 1px solid #dac9a6;}
.chima01 {font-size: 32rpx;margin-bottom: 20rpx;}
.chimaSort text {padding: 5rpx 10rpx;background: #dac9a6;border-radius: 5rpx;margin-right: 20rpx;color: #fff;margin-bottom: 20rpx;
  display: inline-block;
}
.num-down {width:80rpx;height:80rpx;text-align: center;line-height: 80rpx;display: inline-block;font-size: 48rpx;
  border: 1px solid #dac9a6;
}
.num-num {width:120rpx;height:80rpx;text-align: center;line-height: 80rpx;display: inline-block;font-size: 48rpx;
  border: 1px solid #dac9a6;margin: 0 20rpx;
}
.num-add {width:80rpx;height:80rpx;text-align: center;line-height: 80rpx;display: inline-block;font-size: 48rpx;
  border: 1px solid #dac9a6;
}
.bottom {width:100%;height:100rpx;margin-top: 10px;}
.join {width:50%;float:left;background: #fac648;height:100%;text-align: center;line-height: 100rpx;color: #fff;}
.shopping {width:50%;float:left;background: #ff5a00;height:100%;text-align: center;line-height: 100rpx;color: #fff;}
.shop {background: #fff;width:100%;text-align: center;padding: 22rpx 0 26rpx 0;margin-bottom: 16rpx;}
.shop text {display: inline-block;width:130rpx;height:55rpx;text-align: center;line-height: 55rpx;font-size: 23rpx;border-radius: 10rpx;margin: 0 20rpx;}
.shop01 {border: 1px solid #ccc;color: #ccc;}
.shop02 {border: 1px solid #dac9a6;color: #dac9a6;}
.html {width:100%;background: #fff;}
.htmlTop {font-size: 28rpx;color: #dac9a6;border-bottom: 2px solid #dac9a6;
  text-align: center;padding-bottom: 30rpx;padding-top: 30rpx;display: block;width:20%;position: relative;margin:0 auto 30rpx;
}
.htmlImg image {width: 100%;height:100%;}
.fixBottom {width:100%;height:96rpx;position: fixed;bottom:0;left:0;overflow: hidden;line-height: 96rpx;background: #fff;}
.fixBottom view {float:left;}
.fixBottom01 {width:125rpx;height:100%;border-right: 1px solid #c8c8c8;text-align:center;position: relative;}
.fixBottom01 image {width:33rpx;height:48rpx;line-height: 96rpx;vertical-align: middle;}
.fixBottom01 text {position: absolute;border-radius: 50%;font-size: 34rpx;text-align: center;
  background: #dac9a6;color: #fff;width:40rpx;height:40rpx;top:10rpx;left:20rpx;line-height: 40rpx;
}
.fixBottom02 {width:138rpx;height:100%;text-align:center;position: relative;}
.fixBottom02 image {width:35rpx;height:67rpx;line-height: 96rpx;vertical-align: middle;}
.fixBottom03 {width:243rpx;height:100%;text-align: center;line-height: 96rpx;background: #707070;font-size: 32rpx;color: #fff;}
.fixBottom04 {width:247rpx;height:100%;text-align: center;line-height: 96rpx;background: #dac9a6;font-size: 32rpx;color: #000;}