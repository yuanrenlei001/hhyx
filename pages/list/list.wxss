.banner image{
    width: 100%;
    height: 400rpx;
}
.sort {width:96%;position: relative;margin:36rpx auto;overflow: hidden;}
.list {width:110%;position: relative;overflow: hidden;}
.detail {width:338rpx;height:480rpx;float:left;margin-right: 38rpx;margin-bottom: 36rpx;position: relative;}
.detailImg ,detailImg image {width:338rpx;height:338rpx;}
.detailTitle {height:142rpx;position: relative;}
.detailText {
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
margin-top: 16rpx;
}
.detailLeft {position: absolute;bottom:0;left:0;font-size: 20rpx;color: #dac9a6;}
.detailLeft text {font-size: 32rpx;}
.detailRight {position: absolute;bottom:0;right:0;}
.detailRight image {width:40rpx;height:33rpx;}