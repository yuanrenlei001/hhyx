.top {height:104rpx;line-height: 104rpx;position: relative;width:96%;margin: 0 auto 14rpx;border-bottom: 1px solid #f8f8f8;}
.sortLeft {float:left;width:50rpx;height:100%;line-height: 104rpx;margin-left: 12rpx;}
.sortLeft image {width:42rpx;height:58rpx;vertical-align: middle;}
.search {width:464rpx;height:65rpx;font-size: 18rpx;color: #6a6a6a;background: #f8f8f8;
  position: relative;top:50%;margin-top: -32.5rpx;margin-left: 96rpx;border-radius: 30rpx;
  padding-left: 40rpx;
}
.search input {font-size: 18rpx;height:65rpx;line-height: 65rpx;}
.sort {width:96%;position: relative;margin: auto;overflow: hidden;}
.list {width:110%;position: relative;overflow: hidden;}
.detail {width:338rpx;height:480rpx;float:left;margin-right: 38rpx;margin-bottom: 36rpx;position: relative;}
.detailImg ,detailImg image {width:338rpx;height:338rpx;}
.detailTitle {height:142rpx;position: relative;}
.detailText {
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
margin-top: 16rpx;
}
.detailLeft {position: absolute;bottom:0;left:0;font-size: 20rpx;color: #dac9a6;}
.detailLeft text {font-size: 32rpx;}
.detailRight {position: absolute;bottom:0;right:0;}
.detailRight image {width:40rpx;height:33rpx;}